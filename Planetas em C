#include <stdio.h>

int main()
{
    int planeta; 
    float tot, pesoterra;
    
    printf ("Planetas ");
    printf ("\nMercúrio (1)");
    printf ("\nVênus (2)");
    printf ("\nMarte (3)");
    printf ("\nJupiter (4)");
    printf ("\nSaturno (5)");
    printf ("\nUrano (6)");
    printf ("\nNetuno (7)");
    
    printf ("\nQual Planeta escolhido? ");
    scanf ("%d", &planeta);
    printf ("\nQual seu peso na Terra? ");
    scanf ("%f", &pesoterra);
    
    switch (planeta)
    {
        case '1':
            tot = (pesoterra * 0.376);
        break;
        
        case '2':
            tot = (pesoterra * 0.903);
        break;
        
        case '3':
            tot = (pesoterra * 0.380);
        break;
        
        case '4':
            tot = (pesoterra * 2.340);
        break;
        
        case '5':
            tot = (pesoterra * 1.160);
        break;
        
        case '6':
            tot = (pesoterra * 1.150);
        break;
        
        case '7':
            tot = (pesoterra * 1.190);
        break;
        
        default:
            printf ("Comando Inválido");
        break;
    }
    
    printf ("\nSeu peso no Planeta escolhido será: %f", tot);
    return 0;
}
