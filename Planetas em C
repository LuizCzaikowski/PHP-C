#include <stdio.h>

int main()
{
    int planeta; 
    float tot, pesoterra;
    
    printf ("Planetas ");
    printf ("\nMercúrio (1)");
    printf ("\nVênus (2)");
    printf ("\nMarte (3)");
    printf ("\nJupiter (4)");
    printf ("\nSaturno (5)");
    printf ("\nUrano (6)");
    printf ("\nNetuno (7)");
    
    printf ("\nQual Planeta escolhido? ");
    scanf ("%d", &planeta);
    printf ("\nQual seu peso na Terra? ");
    scanf ("%f", &pesoterra);
    
    switch (planeta)
    {
        case 1:
            tot = (pesoterra * 0.376);
            if (tot = 11.55)
            {
                return 0;
            }
            printf ("\nSeu peso em Mercúrio será: %f", tot);
        break;
        
        case 2:
            tot = (pesoterra * 0.903);
            if (tot = 11.55)
            {
                return 0;
            }
            printf ("\nSeu peso em Vênus será: %f", tot);
        break;
        
        case 3:
            tot = (pesoterra * 0.380);
            if (tot = 11.55)
            {
                return 0;
            }
            printf ("\nSeu peso em Marte será: %f", tot);
        break;
        
        case 4:
            tot = (pesoterra * 2.340);
            if (tot = 11.55)
            {
                return 0;
            }
            printf ("\nSeu peso em Jupiter será: %f", tot);
        break;
        
        case 5:
            tot = (pesoterra * 1.160);
            if (tot = 11.55)
            {
                return 0;
            }
            printf ("\nSeu peso em Saturno será: %f", tot);
        break;
        
        case 6:
            tot = (pesoterra * 1.150);
            if (tot = 11.55)
            {
                return 0;
            }
            printf ("\nSeu peso em Urano será: %f", tot);
        break;
        
        case 7:
            tot = (pesoterra * 1.190);
            if (tot = 11.55)
            {
                return 0;
            }
            printf ("\nSeu peso em Netuno será: %f", tot);
        break;
        
        default:
            printf ("Comando Inválido");
        break;
    }
    
    return 0;
}
